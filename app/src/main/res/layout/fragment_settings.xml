<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Uniform Header -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/purple_500" />

        <!-- Settings Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Section 1: Device & Sensor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="3dp"
                android:clipToOutline="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device and Sensor"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:paddingBottom="8dp" />

                <Button
                    android:id="@+id/btnConnectSensor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connect Ultrasonic Sensor"
                    android:backgroundTint="#001AFF"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:padding="12dp"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btnCalibrateSensor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calibrate Sensor"
                    android:backgroundTint="#00C8B7"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    android:elevation="2dp" />

            </LinearLayout>

            <!-- Section 2: Reminders & Alerts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="3dp"
                android:clipToOutline="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reminders and Alerts"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:paddingBottom="8dp" />

                <Switch
                    android:id="@+id/switchPostureAlerts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Posture Alerts"
                    android:textSize="16sp"
                    android:textColor="#555555" />

                <Switch
                    android:id="@+id/switchSoundAlert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Sound Notification"
                    android:textSize="16sp"
                    android:textColor="#555555" />

                <Switch
                    android:id="@+id/switchVibrationAlert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Vibration"
                    android:textSize="16sp"
                    android:textColor="#555555" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder Interval"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp" />

                <Spinner
                    android:id="@+id/spinnerReminderTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <!-- Section 3: Display & Theme -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="3dp"
                android:clipToOutline="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Display Theme"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:paddingBottom="8dp" />

                <Switch
                    android:id="@+id/switchDarkMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Dark Mode"
                    android:textSize="16sp"
                    android:textColor="#555555" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="App Theme Color"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp" />

                <Spinner
                    android:id="@+id/spinnerThemeColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <!-- Section 4: Profile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="3dp"
                android:clipToOutline="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:paddingVertical="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/tvUpdatePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Password"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:paddingVertical="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground" />
            </LinearLayout>

            <!-- Section 5: Buttons -->
            <Button
                android:id="@+id/btnSaveSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Settings"
                android:backgroundTint="#0025FF"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:elevation="3dp"
                android:padding="14dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/btnResetSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset to Default"
                android:backgroundTint="#808080"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:elevation="3dp"
                android:padding="14dp"
                android:layout_marginBottom="10dp" />

            <!-- Logout Button -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:backgroundTint="#FF3B30"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:elevation="3dp"
                android:padding="14dp"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
